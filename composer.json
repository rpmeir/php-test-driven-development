{
    "name": "rpmeir/tdd",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "stan": "./vendor/bin/phpstan analyse --level 6 src tests",
        "cs": "./vendor/bin/phpcs --standard=PSR12 src tests",
        "cbf": "./vendor/bin/phpcbf --standard=PSR12 src tests",
        "tests": [
            "@test",
            "@stan",
            "@cs"
        ]
    },
    "authors": [
        {
            "name": "Rodrigo Pires Meira",
            "email": "rpmeir@gmail.com"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^1.21",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
